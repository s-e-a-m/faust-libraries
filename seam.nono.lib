im_pitch_shift(w, x, s, f, sig) = de.fdelay(mDel,d(f),sig)*ma.fmin(d(f)/x,1) + de.fdelay(mDel,d(f)+w,sig)*(1-ma.fmin(d(f)/x,1))
with {
	mDel = ma.SR;
	i = 1 - s;//1 - pow(2, s/12);
	d(f) = i*vib(f) : (+ : +(w) : fmod(_,w)) ~ _;
    vib(f) = os.osc(f); // manca depth
};
